package com.selenium.pro.Selpracti;

import java.util.List;
import java.util.concurrent.TimeUnit;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.FindBy;

import com.selenium.pro.Selpracti.*;

public class Home implements Utils {

	public static WebDriver driver;

        //All the variables are stored in the interface
	public static void initiate() {
		System.setProperty(key,path);
		driver=new ChromeDriver();	
		driver.get(url);
		driver.manage().timeouts().implicitlyWait(05,TimeUnit.SECONDS);
	}
        //Verify the title of the page
	public static void titleverify() {

		String title=driver.getTitle();
		System.out.println("Title found=" +title);

		//Page title verification
		if(title.equals("Google")) {
			System.out.println("Google loaded successfully...!");
		}
		else {
			System.out.println("Wrong webpage");
		}

	}

         //Send inputs to the google search
	public static void sendInp(String send) {

		driver.findElement(By.name("q")).sendKeys(send);
	}

        //Store the result into list and display in the console
	public static void searchResults() {

		List<WebElement> findElements = driver.findElements(By.xpath("//*[@id=\"tsf\"]/div[2]/div/div[2]/div[2]/ul"));

		// this are all the links you like to visit
		for (WebElement webElement : findElements)
		{
			System.out.println(webElement.getText());
		}
	}


 //Callin all the method in the main method
	public static void main(String[] args) throws Exception {

		initiate();

		titleverify();

		sendInp("results");

		Thread.sleep(3000);

		searchResults();








	}

}
